<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColor">@color/blue_grey_700</item>
    </style>


    <style name="MyCardViewStyle" parent="Theme.AppCompat.Light">
        <item name="cardCornerRadius">8dp</item>
        <item name="contentPaddingBottom">@dimen/small_margin</item>
        <item name="contentPaddingTop">@dimen/small_margin</item>
        <item name="contentPaddingLeft">@dimen/small_margin</item>
        <item name="contentPaddingRight">@dimen/small_margin</item>
        <item name="android:layout_marginStart">@dimen/small_margin</item>
        <item name="android:layout_marginEnd">@dimen/small_margin</item>
        <item name="android:layout_marginTop">@dimen/medium_margin</item>
    </style>

    <style name="AppTheme.DefaultFab" parent="Widget.Design.FloatingActionButton">
        <item name="tint">@color/primary</item>
        <item name="backgroundTint">@color/accent</item>
        <item name="android:layout_margin">@dimen/large_margin</item>
    </style>

    <style name="AppTheme.DialogsFab" parent="AppTheme.DefaultFab">
        <item name="tint">@color/accent</item>
        <item name="backgroundTint">@color/primary</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="LoginStyle" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

</resources>